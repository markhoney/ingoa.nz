{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "apollo",
			"runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
			"program": "${workspaceFolder}/src/server/apollo/index.js",
			"args": ["--watch", "${workspaceFolder}/src/server/apollo", "--watch", "${workspaceFolder}/src/server/db", "--ext", "js,graphql"],
			"restart": true,
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "apollo_old",
			"program": "${workspaceFolder}/src/server/apollo/index.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "nuxt",
			"program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.js",
			"args": ["dev"]
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "server",
			"configurations": ["apollo", "nuxt"]
		},
		{
			"name": "all",
			"configurations": ["apollo", "nuxt", "chrome"]
		}
	]
}