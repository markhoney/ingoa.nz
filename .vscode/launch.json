{
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Dev",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"dev"
			],
			"port": 9229
		},
		{
			"name": "Debug Dev",
			"type": "node",
			"request": "launch",
			"protocol": "inspector",
			//"program": "${workspaceRoot}/node_modules/.bin/nuxt",
			"program": "${workspaceRoot}/node_modules/nuxt/bin/nuxt",
			"stopOnEntry": false,
			"args": ["dev"],
			"cwd": "${workspaceRoot}",
			"sourceMaps": true,
			"env": {
				"NODE_ENV": "development",
				"DEBUG": "nuxt:*,app"
			}
		},
		{
			"name": "Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			//"webRoot": "${workspaceFolder}"
		}
	]
}
