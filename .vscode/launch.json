{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "server:apollo",
			"args": ["${workspaceFolder}/src/server/apollo/index.js --watch ${workspaceFolder}/src/server/apollo --watch ${workspaceFolder}/src/server/db --ext js,graphql"],
			"osx": {
				"program": "${workspaceFolder}/node_modules/.bin/nodemon"
			},
			"linux": {
				"program": "${workspaceFolder}/node_modules/.bin/nodemon"
			},
			"windows": {
				"program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "server:nuxt",
			"args": ["dev"],
			"osx": {
				"program": "${workspaceFolder}/node_modules/.bin/nuxt"
			},
			"linux": {
				"program": "${workspaceFolder}/node_modules/.bin/nuxt"
			},
			"windows": {
				"program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.js"
			}
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "client:chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "fullstack:nuxt",
			"configurations": ["server:apollo", "server:nuxt", "client:chrome"]
		}
	]
}