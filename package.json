{
	"name": "ingoa.nz",
	"version": "1.0.0",
	"description": "Ngā Ingoa o Aotearoa: An oral dictionary of Māori placenames",
	"author": "Mark Honeychurch",
	"private": true,
	"scripts": {
		"prepare:db": "node src/data/import.js",
		"prepare:images": "node static/img/staticmaps.js",
		"dev": "cross-env NODE_ENV=development NUXT_PORT=4000 NODE_OPTIONS='--max-old-space-size=8192' nodemon src/index.js --watch src/server --ext js,graphql",
		"dev:nuxt": "nuxt",
		"dev:chrome": "yarn dev -- --inspect",
		"dev:share": "lt --port 4000 --subdomain ingoa",
		"dev:kill": "taskkill /F /im node.exe",
		"build": "nuxt build --modern",
		"build:analyse": "yarn build -- --analyze",
		"start:nuxt": "cross-env NODE_ENV=production nuxt start --modern",
		"start:apollo": "cross-env NODE_ENV=production node src/server/apollo/index.js",
		"start:server": "cross-env NODE_ENV=production node src/server/index.js",
		"prod": "yarn build && yarn prod:apollo & yarn start:nuxt",
		"prod:pm2": "pm2 start ecosystem.config.js",
		"docker:build": "docker-compose build",
		"docker:generate": "yarn generate && docker build -t ingoa-static - < Dockerfile.static",
		"docker:static": "",
		"docker:dynamic": "docker-compose up -d --build && docker-compose ps && docker-compose exec ingoa pm2 ps",
		"generate": "yarn start:apollo & yarn generate:files && pkill --signal SIGINT apollo",
		"generate:files": "nuxt generate --modern"
	},
	"dependencies": {
		"@nuxtjs/apollo": "^4.0.0-rc4",
		"@nuxtjs/feed": "^1.1.0",
		"@nuxtjs/google-analytics": "^2.2.0",
		"@nuxtjs/pwa": "^3.0.0-beta.14",
		"@nuxtjs/robots": "^2.1.0",
		"@nuxtjs/sitemap": "^0.2.2",
		"apollo-cache-inmemory": "^1.5.1",
		"apollo-cache-persist": "^0.1.1",
		"apollo-server": "^2.4.8",
		"apollo-server-express": "^2.4.8",
		"core-js": "2",
		"distinct-colors": "^1.0.4",
		"express": "^4.16.4",
		"graphql-import": "^0.7.1",
		"graphql-tag": "^2.10.1",
		"graphql-tools": "^4.0.4",
		"image-map": "^1.1.5",
		"jquery": "^3.4.0",
		"js-levenshtein": "^1.1.6",
		"lodash": "^4.17.11",
		"nuxt": "^2.6.1",
		"nuxt-i18n": "^5.8.5",
		"nuxt-leaflet": "0.0.18",
		"nuxt-trailingslash-module": "^1.1.0",
		"purgecss": "^1.2.0",
		"stylus": "^0.54.5",
		"stylus-loader": "^3.0.2",
		"vue-object-merge": "^0.1.7",
		"vue2-google-maps": "^0.10.6",
		"vuetify": "^1.5.11",
		"vuetify-loader": "^1.2.1",
		"wavesurfer.js": "^2.2.1"
	},
	"devDependencies": {
		"@babel/runtime-corejs2": "^7.4.3",
		"@nuxtjs/localtunnel": "^1.1.0",
		"@nuxtjs/webpackmonitor": "^0.1.0",
		"JSONStream": "^1.3.5",
		"apollo-link-http": "^1.5.14",
		"cross-env": "^5.2.0",
		"csv": "^5.1.1",
		"express-nedb-rest": "^1.3.0",
		"localtunnel": "^1.9.1",
		"nedb": "^1.8.0",
		"nedb-async": "0.0.9",
		"node-fetch": "^2.3.0",
		"nodemon": "^1.18.11",
		"npm-run-all": "^4.1.5",
		"nuxt-memwatch": "^0.1.1",
		"pm2": "^3.5.0",
		"purgecss-webpack-plugin": "^1.4.0",
		"rimraf": "^2.6.3"
	}
}
