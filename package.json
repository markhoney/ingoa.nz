{
	"name": "ingoa.nz",
	"version": "1.0.0",
	"description": "Ngā Ingoa o Aotearoa: An oral dictionary of Māori placenames",
	"author": "Mark Honeychurch",
	"private": true,
	"scripts": {
		"prepare:import": "node src/data/import.js",
		"prepare:nedb": "node src/data/import.js nedb",
		"prepare:connect": "node src/data/connect.js",
		"prepare:images": "node src/client/static/img/staticmaps.js",
		"prepare:apollo": "cd src/apollo service:push --config=./src/server/apollo/apollo.config.js --key=service:ingoa:78h4D9zEtDLOy15k554-IA",
		"prepare:apollo:old": "apollo service:push --config=./src/server/apollo/apollo.config.js --endpoint=http://localhost:4000/graphql --key=",
		"dev": "cross-env NODE_OPTIONS='--max-old-space-size=8192' run-p dev:apollo dev:nuxt",
		"dev:nuxt": "nuxt",
		"dev:chrome": "yarn dev -- --inspect",
		"dev:share": "lt --port 8000 --subdomain ingoa",
		"dev:apollo": "nodemon src/server/apollo/index.js --watch src/server/apollo --ext js,graphql",
		"build": "nuxt build",
		"build:analyse": "yarn build -- --analyze",
		"start": "cross-env NODE_OPTIONS='--max-old-space-size=8192' run-p start:apollo start:nuxt",
		"start:nuxt": "nuxt start",
		"start:apollo": "nodenv src/server/apollo/index.js",
		"start:server": "cross-env NODE_ENV=production node src/server/index.js",
		"stop:apollo": "pkill --signal SIGINT apollo",
		"stop:all": "taskkill /F /im node.exe",
		"prod": "run-s build start",
		"prod:pm2": "pm2 start ecosystem.config.js",
		"static": "run-s static:generate static:host",
		"static:nuxt": "nuxt generate",
		"static:generate": "cross-env NODE_OPTIONS='--max-old-space-size=8192' run-p static:delete start:apollo static:build",
		"static:delete": "rimraf dist",
		"static:build": "run-s static:nuxt stop:apollo",
		"static:host": "BASE_URL=http://localhost:80 caddy -agree -conf Caddyfile.static",
		"docker:static": "docker build -t ingoa-static - < Dockerfile.static",
		"docker:dynamic": "docker build -t ingoa-dynamic - < Dockerfile.dynamic",
		"docker:build": "docker-compose build",
		"docker:generate": "run-s generate docker:static",
		"docker:up": "docker-compose up -d",
		"docker:print": "docker-compose ps && docker-compose exec ingoa pm2 ps",
		"docker:prod": "run-s docker:dynamic docker:up docker:print"
	},
	"dependencies": {
		"@nuxtjs/apollo": "^4.0.0-rc6",
		"@nuxtjs/feed": "^1.1.0",
		"@nuxtjs/google-analytics": "^2.2.0",
		"@nuxtjs/pwa": "^3.0.0-beta.16",
		"@nuxtjs/robots": "^2.2.0",
		"@nuxtjs/sitemap": "^1.2.0",
		"apollo-cache-inmemory": "^1.6.0",
		"apollo-cache-persist": "^0.1.1",
		"apollo-server": "^2.5.0",
		"apollo-server-express": "^2.5.0",
		"core-js": "^2.6.5",
		"distinct-colors": "^1.0.4",
		"dotenv": "^8.0.0",
		"express": "^4.17.0",
		"graphql-import": "^0.7.1",
		"graphql-tag": "^2.10.1",
		"graphql-tools": "^4.0.4",
		"image-map": "^1.1.5",
		"jquery": "^3.4.1",
		"js-levenshtein": "^1.1.6",
		"lodash": "^4.17.11",
		"node-env-run": "^3.0.2",
		"nuxt": "^2.7.1",
		"nuxt-i18n": "^5.12.3",
		"nuxt-leaflet": "^0.0.18",
		"nuxt-trailingslash-module": "^1.1.0",
		"purgecss": "^1.3.0",
		"stylus": "^0.54.5",
		"stylus-loader": "^3.0.2",
		"vue-object-merge": "^0.1.7",
		"vue2-google-maps": "^0.10.6",
		"vuetify": "^1.5.14",
		"vuetify-loader": "^1.2.2",
		"wavesurfer.js": "^2.2.1"
	},
	"devDependencies": {
		"@babel/runtime-corejs2": "^7.4.5",
		"@nuxtjs/localtunnel": "^1.1.0",
		"@nuxtjs/webpackmonitor": "^0.1.0",
		"JSONStream": "^1.3.5",
		"apollo": "^2.12.3",
		"apollo-link-http": "^1.5.14",
		"cross-env": "^5.2.0",
		"csv": "^5.1.1",
		"express-nedb-rest": "^1.3.0",
		"localtunnel": "^1.9.1",
		"nedb": "^1.8.0",
		"nedb-async": "0.0.9",
		"node-fetch": "^2.6.0",
		"nodemon": "^1.19.0",
		"npm-run-all": "^4.1.5",
		"nuxt-memwatch": "^0.1.1",
		"pm2": "^3.5.1",
		"purgecss-webpack-plugin": "^1.5.0",
		"rimraf": "^2.6.3"
	}
}
